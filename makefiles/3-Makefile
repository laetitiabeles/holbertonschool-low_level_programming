CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

clean :
	$(RM) *~

all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(NAME) : $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

school.o : school.c
	$(CC) -o $(OBJ) -c $(SRC) $(NAME)

main.o : main.c
	$(CC) -o $(OBJ) -c $(SRC) $(NAME)

oclean : $(OBJ)
	$(RM) *.o

fclean : clean $(NAME)
	$(RM) $(NAME)

re: fclean all
